@model IEnumerable<Texnology>

@{
    ViewData["Title"] = "Index";
}
<div style=" width: 86%; margin-left: 17%; margin-top: 5%;">

    <h1>Texnology</h1>

    <p>
        <a class="btn btn-dark" asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description2)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img width="100" src="~/assets/img/About/@item.Image" alt="Alternate Text" />

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description2)
                    </td>


                    <td>
                        <a class="btn btn-dark" asp-action="update" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-dark" asp-action="Detail" asp-route-id="@item.Id">Details</a> |
                        <a class="btn btn-dark" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>