@model PageNationList<Service>
@{ 
    ViewData["Title"] = "Index";
   int counter = Model.PageIndex == 1 ? 0 : (Model.PageIndex - 1) * 3; 
    }

<div style=" width: 86%; margin-left: 17%; margin-top: 5%;">


    <h1>Service</h1>

    <p>
        <a class="btn btn-dark" asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Image
                </th>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
<tr>
    <td>
        <img width="100" src="~/assets/img/About/@item.Image" alt="Alternate Text" />

    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsDeleted)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CreatAt)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CreatBy)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UpdateAt)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UpdateBy)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DeletedAt)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DeletedBy)
    </td>
    <td>
        <a class="btn btn-dark" asp-action="update" asp-route-id="@item.Id">Edit</a> |
        <a class="btn btn-dark" asp-action="Detail" asp-route-id="@item.Id">Details</a> |
        <a class="btn btn-dark" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </td>
</tr>            }
        </tbody>
    </table>
    <div class="row">
        <div class="col-lg-12">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @if (Model.HasPrev)
                    {
        <li class="page-item"><a class="page-link" asp-area="manage" asp-controller="service" asp-action="index" asp-route-pageIndex="@(Model.PageIndex-1)">Previous</a></li>}
                    @for (int i = Model.Start; i <= Model.End; i++)
                    {
        <li class="page-item @(Model.PageIndex == i ? "active" :"")"><a class="page-link" asp-area="manage" asp-controller="service" asp-action="index" asp-route-pageIndex="@i">@i</a></li>}

                    @if (Model.HasNext)
                    {
        <li class="page-item"><a class="page-link" asp-area="manage" asp-controller="service" asp-action="index" asp-route-pageIndex="@(Model.PageIndex+1)">Next</a></li>}
                </ul>
            </nav>
        </div>
    </div>
</div>


