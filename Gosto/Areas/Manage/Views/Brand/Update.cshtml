@model Gosto.Models.Brand

@{
    ViewData["Title"] = "Update";
}

<div style=" width: 86%; margin-left: 17%; margin-top: 5%;">

    <h1>Update</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Update">
                <div method="post" enctype="multipart/form-data" asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input asp-for="ImageFile" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BrandInfo" class="control-label"></label>
                    <input asp-for="BrandInfo" class="form-control" />
                    <span asp-validation-for="BrandInfo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-dark" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-dark" asp-action="Index">Back to List</a>
    </div>

</div>

@section script{
    @await Html.PartialAsync("_ValidationPartial")
}