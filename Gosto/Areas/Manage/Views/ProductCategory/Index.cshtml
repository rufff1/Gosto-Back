@model PageNationList<ProductCategory>
@{
    ViewData["Title"] = "Index";
    int counter = Model.PageIndex == 1 ? 0 : (Model.PageIndex - 1) * 3;
    }

<div style=" width: 86%; margin-left: 17%; margin-top: 5%;">

    <h1>Product Category</h1>

    <p>
        <a class="btn btn-dark" asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                   Name
                </th>
                <th>
                  Image
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <img width="100" src="~/assets/img/Category/@item.Image" alt="Alternate Text" />

                    </td>

                    <td>
                        <a class="btn btn-dark" asp-action="update" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-dark" asp-action="Detail" asp-route-id="@item.Id">Details</a> |
                        <a class="btn btn-dark delete-btn" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <div class="row">
        <div class="col-lg-12">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @if (Model.HasPrev)
                    {
                        <li class="page-item"><a class="page-link" asp-area="manage" asp-controller="productcategory" asp-action="index" asp-route-pageIndex="@(Model.PageIndex-1)">Previous</a></li>
}
                    @for (int i = Model.Start; i <= Model.End; i++)
                    {
                        <li class="page-item @(Model.PageIndex == i ? "active" :"")"><a class="page-link" asp-area="manage" asp-controller="productcategory" asp-action="index" asp-route-pageIndex="@i">@i</a></li>
}

                    @if (Model.HasNext)
                    {
                        <li class="page-item"><a class="page-link" asp-area="manage" asp-controller="productcategory" asp-action="index" asp-route-pageIndex="@(Model.PageIndex+1)">Next</a></li>
}
                </ul>
            </nav>
        </div>
    </div>
</div>


@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(".delete-btn").click(function (e) {
            e.preventDefault()
            console.log($(this).attr("href"))
            Swal.fire({
                title: 'Silmek istediyinizden eminsiz?',
                text: "Bunu geri qaytara bilməyəcəksiniz!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Beli, Eminem!'
            }).then((result) => {
                if (result.isConfirmed) {
                    var link = $(this).attr("href");
                    fetch(link).then(response => response.json()).then(data => {
                        if (data.status == 200) {
                            location.reload(true)
                        } else if (data.status == 400) {
                            Swal.fire(
                                'Silmek olmaz!',
                                'Bu Categoriyaya bagli Datalar var.'
                            )
                        }



                    }
                    );
                }
            })
        })
    </script>
}
