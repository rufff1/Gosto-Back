<section>
    <div class="blog-head">
        <div class="container">
            <div class="col-lg-12">
                <div class="all text-center">
                    <h5 class="fw-bold">EXPLORE THE BLOG</h5>
                    <h3 class="fw-bold">LATEST BLOG POSTS</h3>
                    <p>Commodo sociosqu venenatis cras dolor sagittis integer luctus maecenas.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="containerr">
        <div class="blog-slider ">
            @foreach (var blog in Model.Blogs.OrderByDescending(b => b.CreatAt).TakeLast(6))
            {
                <div class="card">
                    <div class="img">
                        <a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@blog.Id">
                            <img src="~/assets/img/Blog/@blog.Image" class="card-img-top" alt="">
                        </a>
                    </div>
                    <div class="card-body">
                        <span class="blog-category"><a  tabindex="0">@blog.BlogCategory.Name</a></span>
                        <a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@blog.Id"><h5 class="card-title">@blog.Title</h5></a>
                        <p class="card-text">@blog.DescQuota</p>
                        <p class="blog-date">Post Date <span>@blog.BlogTime.ToString("M MMMM yyyy")</span></p>
                    </div>
                </div>

            }





        </div>
    </div>
</section>

