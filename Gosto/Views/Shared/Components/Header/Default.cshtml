
@model HeaderVM

<!-- header phone -->
<section class="phone-header">

    <div class="container-fluid">
        <div class="row">
            <div class="barside-phone py-3 mt-2 mb-2 ">
                <div class="container-fluid">
                    <div class="row ">


                        <div class="col-4">
                            <div class="barside-left">

                                <div class=" " data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling"><i class="icon-menu fa-solid fa-bars"></i></div>

                                <div class="offcanvas offcanvas-start side-bar-left" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
                                    <div class="offcanvas-header">

                                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                    </div>
                                    <div class="offcanvas-body">
                                        <ul class="list-group">
                                            <li class="menu-item d-flex">
                                                <div class="left">

                                                </div>

                                            </li>
                                            <li class="menu-item d-flex ">
                                                <div class="left">

                                                </div>

                                            </li>
                                            <li class="menu-item d-flex">
                                                <div class="left">
                                                    <a asp-controller="home" asp-action="index">Home</a>
                                                </div>

                                            </li>
                                            <li class="menu-item">
                                                <div class="left">
                                                    <a asp-controller="shop" asp-action="index">Shop</a>
                                                </div>
                                            </li>
                                            <li class="menu-item">
                                                <div class="left">
                                                    <a asp-controller="blog" asp-action="index">Blog</a>
                                                </div>
                                            </li>
                                            <li class="menu-item">
                                                <div class="left">
                                                    <a asp-controller="wishlist" asp-action="index">Wishlist</a>

                                                </div>
                                            </li>
                                            <li class="menu-item">
                                                <div class="left">
                                                    <a asp-controller="about" asp-action="index">About</a>

                                                </div>
                                            </li>
                                            <li class="menu-item">
                                                <div class="left">
                                                    <a asp-controller="contact" asp-action="index">Contact</a>

                                                </div>
                                            </li>
                                            <li class="menu-item">
                                                <div class="left">
                                                    <a asp-controller="account" asp-action="login">Login</a>

                                                </div>
                                            </li>
                                            <li class="menu-item">
                                                <div class="left">
                                                    <a asp-controller="account" asp-action="register">Register</a>

                                                </div>
                                            </li>

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="logo">
                                <div class="img">
                                    <a asp-controller="home" asp-action="index"> <img src="~/assets/img/Logo/logo.png" alt=""></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="barside-basket text-end ">
                                <div class="icon d-flex justify-content-end align-items-center">
                                    <a class=" pe-1" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight"><i class="icon-basket fa-solid fa-store"></i></a>
                                    <span id="count-basket"></span>
                                </div>

                                <div class="offcanvas offcanvas-end side-bar-right" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
                                    <div class="offcanvas-header">
                                        <h5 class="offcanvas-title" id="offcanvasRightLabel"></h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                    </div>
                                    <div class="offcanvas-body">

                                        <div class="basket-head">
                                            <h3>Your Cart</h3>
                                        </div>
                                        <div class="scroll">
                                            <div class="container">
                                                <div class="" id="calc">

                                                </div>

                                            </div>
                                            <div id="basket-list">


                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</section>


<section class="header-desc overflow-hidden">
    <header class="scrl position-fixed top-0 w-100">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-3">
                    <div class="left justify-content-between">
                        <select class="form-select d-inline" aria-label="Default select example">
                            <option selected>USD</option>
                            <option value="1">AUD</option>
                            <option value="2">BRL</option>
                            <option value="3">GPB</option>
                            <option value="3">DKK</option>
                        </select>

                        <select class="form-select d-inline" aria-label="Default select example">
                            <option selected>English</option>
                            <option value="1">Australia</option>
                            <option value="2">Spain</option>
                            <option value="3">Brazil</option>
                            <option value="3">France</option>
                        </select>

                        <div class="phone-header d-inline">
                            <a> @Model.Settings.First(s => s.Key == "HeadPhone").Value</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="nav justify-content-between align-items-center">
                        <a asp-controller="home" asp-action="index">HOME</a>
                        <a asp-controller="shop" asp-action="index">SHOP</a>
                        <div class="dropdown">
                            <div class="default d-flex align-items-center">
                                <a class="hr">PAGES</a>
                            </div>
                            <div class="db-contect">
                                <a asp-controller="ourteam" asp-action="index">Our Team</a>
                                <a asp-controller="account" asp-action="profile">My Account</a>
                                <a asp-controller="wishlist" asp-action="index">Wishlist</a>
                            </div>
                        </div>
                        <a class="big" asp-controller="home" asp-action="index"><img src="~/assets/img/Logo/@Model.Settings.First(s => s.Key == "HeadLogo").Value" alt=""></a>
                        <a asp-controller="blog" asp-action="index">BLOG</a>
                        <a asp-controller="about" asp-action="index">ABOUT</a>
                        <a asp-controller="contact" asp-action="index">CONTACT</a>
                    </div>
                </div>

                <div class="col-lg-3">
                    <div class="row">
                        <div class="right text-end ">
                            <div class="al d-flex align-items-center">
                                <a class="me-3" asp-controller="account" asp-action="login">Login</a>
                                <a class="me-4" asp-controller="account" asp-action="register">Register</a>
                                <input class="me-2" type="text" placeholder="search">
                                <div class="barside-wish me-4">
                                    <div class="icon">
                                        <a asp-controller="wishlist" asp-action="index" class="fs-3  px-3"><i class="fs-3 fa-regular fa-heart"></i></a>
                                        <span id="count-wishlist"></span>
                                    </div>

                                </div>
                                <div class="basket me-4">
                                    <div class="icon">
                                        <a asp-controller="basket" asp-action="GetFromBasket" class="fs-3  px-3"><i class="fs-3 fa-solid fa-store"></i></a>
                                        <span class="count"></span>
                                    </div>

                                    <div class="header-cart">
                                        @*@await Html.PartialAsync("_BasketCardPartial",Model.BasketVMs)*@
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </header>
</section>
<hr>
