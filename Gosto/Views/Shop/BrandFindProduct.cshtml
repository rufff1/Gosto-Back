@model ShopVM

@{
    ViewData["Title"] = "BrandFindProduct";
}




<section>
    <div class="shop-list">
        <div class="containerr">
            <div class="row">


                <div class="col-lg-12">
                    <div class="path">
                        <a class="d-inline" asp-controller="home" asp-action="index">Home</a>
                        /
                        <a class="d-inline">Product</a>
                    </div>
                </div>


                <div class="col-lg-2">

                    <div class="product-category">
                        <div class="box">
                            <div class="txt align-items-center d-flex justify-content-between">
                                <h5>PRODUCT CATEGORIES</h5>
                            </div>
                            <div class="bdy">





                                @foreach (var productCategory in Model.ProductCategories)
                                {

                                    @if (productCategory.Products.Count() > 0)
                                    {

                                        <a asp-controller="shop" asp-action="CategoryFindproduct" asp-route-id="@productCategory.Id" class="d-block" style="cursor:pointer; font-size:15px; margin-bottom:10px;">@productCategory.Name (@productCategory.Products.Count())</a>}}
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="brands">
                        <div class="box">
                            <div class="txt align-items-center d-flex justify-content-between">
                                <h5>FILTER BY BRANDS</h5>
                            </div>
                            <div class="bdy">
                                @foreach (var brand in Model.Brands)
                                {


                                    <a asp-controller="shop" asp-action="BrandFindproduct" asp-route-id="@brand.Id" class="d-block" style="cursor:pointer; font-size:15px; margin-bottom:10px;"> @brand.Name</a>}


                            </div>
                        </div>

                    </div>

                    <hr>

                    <div class="color">
                        <div class="box">
                            <div class="txt align-items-center d-flex justify-content-between pb-3">
                                <h5>FILTER BY COLOR</h5>
                            </div>
                            <div class="bdy">

                                @foreach (var color in Model.Colors)
                                {

                                    <a  asp-controller="shop" asp-action="colorfindproduct" asp-route-id="@color.Id" class="d-block" style="cursor:pointer; font-size:15px; margin-bottom:8px;">@color.Name</a>

                                    <br>}



                            </div>


                        </div>

                    </div>

                    <hr>








                </div>

                <div class="col-lg-9">


                    <div class="product mt-5">
                        <div class="row">
                            @await Html.PartialAsync("_ProductListPartial", Model.Products)


                        </div>




                    </div>
                </div>
            </div>
        </div>
    </div>
</section>









