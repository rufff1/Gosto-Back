@model Location
@{
    ViewData["Title"] = "Index";
}


<section>
    <div class="cntct">
        <div class="col-lg-6">
          
            <div class="map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d17185.039307412153!2d49.945011639741786!3d40.410745787875406!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x403062ff35f77b47%3A0xfda09e60cb27f06d!2sNeft%C3%A7il%C9%99r%20m%2Fst%20(Qara%20Qarayev%20prospekti)!5e0!3m2!1sen!2s!4v1664745935459!5m2!1sen!2s"
                        width="100%"
                        height="700"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
        <div class="containerr">
            <div class="row">
                <div class="infoo pb-2">
                    <div class="col-lg-6 ">
                        <h3 class="title ms-5 fw-bold pb-2">@Model.Title</h3>
                        <div class="address mt-4">
                            <h4>@Model.Adress</h4>
                        </div>
                        <div class="work_time ">
                            <p>Monday – Friday: 9:00-20:00 <br> Saturady: 11:00 – 15:00</p>
                        </div>
                        <div class="phone">
                            <a  type="phone">@Model.Phone</a>
                        </div>
                        <div class="email">
                            <a  type="email">@Model.Email</a>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="contact-form mt-3">
                    <form method="post" action="/contact#contact-form" id="contact-form" accept-charset="UTF-8" class="form-contact">
                        <input type="hidden" name="form_type" value="contact"><input type="hidden" name="utf8" value="✓">
                        <h4 class="main-title fw-bold mb-2">Fill out the form and we'll get back soon!</h4>   <div class="row ">
                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <input placeholder="Name " class="input-info w-100 py-2" id="name" required="" name="contact[name]" type="text" value="">
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <input placeholder="Email" value="" required="" name="contact[email]" class="input-info w-100 py-2" id="email" type="text">
                            </div>
                        </div>
                        <textarea placeholder="Message" rows="8" class="input-info input-note w-100 mt-5" name="contact[body]" required="" id="message">

                </textarea>
                        <div class="group-button">
                            <button class="button submit py-4 fw-bold" type="submit">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

