@model LognVM
@{
    ViewData["Title"] = "Login";
}




<section>
    <div class="login">
        <div class="col-lg-12">
            <div class="path">
                <a class="d-inline" asp-controller="home" asp-action="index">Home</a>
                /

                <p class="d-inline blog-name">Login</p>
            </div>
        </div>
        <div class="containerr">
            <div class="row">
                <div class="col-xl-10 col-lg-12 col-md-9">

                    <div class="p-5">
                        <div class="">
                            <h3 class=" mb-5">Login</h3>
                        </div>
                        <form method="post" class="user">
                            <div asp-validation-summary="ModelOnly" class="text text-danger"></div>
                            <div class="form-group">
                                <label class="">Email <span>*</span></label>
                                <input asp-for="Email" class="form-control form-control-user"
                                       aria-describedby="emailHelp"
                                       placeholder="Email">
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="">Paswoord<span>*</span></label>
                                <input asp-for="Password" class="form-control form-control-user"
                                       placeholder="Password">
                            </div>

                            <div class="form-group d-flex justify-content-between">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="RememberMe" type="checkbox" id="flexCheckDefault">
                                    <label class="form-check-label" asp-for="RememberMe" for="flexCheckDefault">
                                        Remember Me
                                    </label>
                                </div>
                                <div class="">
                                    <a class="small">Forgot Password?</a>
                                </div>
                            </div>
                            <div class="btn-login">
                                <button class="button submit py-4 fw-bold" type="submit">LOGIN</button>
                            </div>
                        </form>

                       
                        <div class="btn-create">
                            <a class="small"asp-controller="account" asp-action="register"> <button class="button submit py-4 fw-bold" type="submit">CREATE NEW ACCOUNT</button> </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>