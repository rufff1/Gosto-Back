@model AccountVM
@{
    ViewData["Title"] = "ForgotPassword";
}

<section>
    <div class="login">
        <div class="col-lg-12">
            <div class="path">
                <a class="d-inline" asp-controller="home" asp-action="index">Home</a>
                /

                <p class="d-inline blog-name">Login</p>
            </div>
        </div>
        <div class="containerr">
            <div class="row">
                <div class="col-xl-10 col-lg-12 col-md-9">

                    <div class="p-5">
                        <div class="">
                            <h3 class=" mb-5">Forgot Password</h3>
                        </div>

                        <form method="post">

                            <div class="form-group">
                                <label asp-for="AppUser.Email" class="">Email <span>*</span></label>
                                <input asp-for="AppUser.Email" class="form-control form-control-user"
                                       aria-describedby="emailHelp"
                                       placeholder="Enter your email">
                                <span asp-validation-for="AppUser.Email" class="text text-danger"></span>

                            </div>

                            <div class="btn-login">
                                <button class="button submit py-4 fw-bold" type="submit">Send email</button>
                            </div>
                            

                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>