@model PageNationList<Blog>
@{ ViewData["Title"] = "Index";
                int counter = Model.PageIndex == 1 ? 0 : (Model.PageIndex - 1) * 3; }

<section>
    <div class="blog-list">
        <div class="containerr">
            <div class="row">
                <div class="col-lg-12">
                    <div class="path">
                        <a class="d-inline" asp-controller="home" asp-action="index">Home</a>
                        /
                        <a class="d-inline">Blog</a>
                    </div>
                </div>

                @foreach (var blog in Model)
                {

    <div class="col-lg-4">
        <div class="card">
            <div class="img">
                <a asp-controller="blog" asp-action="blogdetail" asp-route-id="@blog.Id">

                    <img src="~/assets/img/Blog/@blog.Image" class="card-img-top" alt="">
                </a>
            </div>
            <div class="card-body">
                <span class="blog-category"><a href="" tabindex="0">@blog.BlogCategory</a></span>
                <a asp-controller="blog" asp-action="blogdetail" asp-route-id="@blog.Id"><h5 class="card-title">@blog.Title</h5></a>
                <p class="card-text">
                    @if (blog.Description1.Length > 60)
                    {
    @blog.Description1.Substring(0, 60);
}
else
{
@blog.Description1}
                </p>
                <p class="blog-date">Post Date <span>@blog.BlogTime.ToString("M MMMM yyyy")</span></p>
            </div>
        </div>
    </div>}


            </div>
        </div>
    </div>
    <div class="text-center">
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        @if (Model.HasPrev)
                        {
            <li class="page-item"><a class="page-link" asp-controller="blog" asp-action="index" asp-route-pageIndex="@(Model.PageIndex-1)">Previous</a></li>
}
                        @for (int i = Model.Start; i <= Model.End; i++)
                        {
            <li class="page-item @(Model.PageIndex == i ? "active" :"")"><a class="page-link"  asp-controller="blog" asp-action="index" asp-route-pageIndex="@i">@i</a></li>
}

                        @if (Model.HasNext)
                        {
            <li class="page-item"><a class="page-link" asp-controller="blog" asp-action="index" asp-route-pageIndex="@(Model.PageIndex+1)">Next</a></li>
}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</section>

